<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="180dp"
              android:minWidth="300dp"
              android:orientation="vertical"
              android:background="@drawable/widget_bg"
              android:padding="0dp">


    <!-- HEADER -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:background="#000000">

        <TextView
                android:id="@+id/widget_header"
                android:text="InstaSave"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
    </LinearLayout>

    <!-- WHITE ROUNDED BODY -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_white_container"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

        <!-- LEFT GRADIENT CARD -->
        <LinearLayout
                android:id="@+id/btn_import"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:background="@drawable/bg_card_pink"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:tint="#FFFFFF" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Import\nfrom Insta"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingTop="4dp" />
        </LinearLayout>

        <Space
                android:layout_width="10dp"
                android:layout_height="1dp" />

        <!-- RIGHT GRADIENT CARD -->
        <LinearLayout
                android:id="@+id/btn_repost"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:background="@drawable/bg_card_blue"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="6dp">

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@android:drawable/ic_menu_rotate"
                    android:tint="#FFFFFF" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Pics\n Repost"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:paddingTop="4dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
